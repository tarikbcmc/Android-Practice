<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mcq">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/right_ans_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textColor="#4CAF50"
                android:text="R:0"/>


            <TextView
                android:id="@+id/wrong_ans_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textColor="#E91E63"
                android:text="W: 0"/>

            <TextView
                android:id="@+id/score_ans_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30dp"
                android:textColor="#000"
                android:text="Scr: 0"/>
        </LinearLayout>


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="#000" />

        <TextView
            android:id="@+id/question_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#000"
            android:text="1. What is Questions?"/>
        <RadioGroup
            android:id="@+id/radio_group_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/ans_op_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option one"/>
            <RadioButton
                android:id="@+id/ans_op_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option Two"/>
            <RadioButton
                android:id="@+id/ans_op_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option Three"/>
            <Button
                android:id="@+id/next_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_radius"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:text="Next"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:textSize="27dp"/>
        </RadioGroup>
    </LinearLayout>
    

</LinearLayout>